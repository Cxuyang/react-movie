.movie-list
  width: 100%
  height: 100%
  box-sizing: border-box
  padding: 0 0.5rem
  .movie-block
    box-sizing: border-box
    width: 100%
    padding: 0.5rem 0
    display: flex
    flex-direction: row
    border-bottom: 0.05rem solid #eee
    .movie-rank
      font-size: 1.2rem
      line-height: 5rem
      margin-right: 0.5rem
    .rank-first
      color: #FFD700
    .rank-secend
      color: #DDDDDD
    .rank-third
      color: #CD853F
    img
      margin-right: 0.5rem
      height: 5rem
    .block-right
      display: flex
      flex-direction: column
      .right-title
        font-size: 0.7rem
        font-weight: 500
      span
        color: #909399
        font-size: 0.6rem
        line-height: 1.3rem
      .rate-text
        color: #FFD700