.user-content
  .user-wrapper
    position relative
    height: 7rem
    width: 100%
    padding: 1.5rem
    box-sizing: border-box
    display: flex
    .user-background
      position: absolute
      height 100%
      width: 100%
      top: 0
      left: 0
      background: url('../../images/user-avatar.jpg') no-repeat
      background-size: 100%
      filter: blur(10px)
    .user-avatar
      width: 4rem
      height: 4rem
      border-radius: 50%
      display: flex
      margin-right: 0.5rem
      z-index: 1
    .user-info
      margin: auto 0
      display: flex
      flex-direction: column
      justify-content: space-between
      z-index: 1
      .user-name
        color: #fff
        font-size: 0.8rem
        font-weight: 500
      .user-vip
        color: #ffffff
        font-size: 0.6rem
        padding: 0.2rem
        box-sizing: border-box
        background-color: #6062667d
        border-radius: 30%
  .img-wrapper
    width: 100%
    height: 2.5rem
    display: flex
    justify-content: space-around
    padding: 0.25rem
    box-sizing: border-box
    .img-block
      display: flex
      flex-direction: column
      height: 2rem
      .icon
        font-size: 1.2rem
        margin: 0 auto
      .icon-homeuizqdianying
        color: #F56C6C
      .icon-youhuiquan
        color: #E6A23C
      .icon-card
        color: #409EFF
      .icon-yanchufuwu
        color: #FF00FF
      span
        font-weight: 400
        font-size: 0.6rem
        margin-top: 0.2rem
        color: #909399